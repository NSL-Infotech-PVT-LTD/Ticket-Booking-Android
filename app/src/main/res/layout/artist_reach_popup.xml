<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#60000000"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomCard"
        app:cardElevation="@dimen/_5sdp"
        android:layout_margin="10dp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleconstrain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/messageTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:text="@string/are_you_sure_artist_reached_at_your_location"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/grey_Dark_color"
                android:gravity="center"
                />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/grey_color"
                android:alpha="0.3"
                app:layout_constraintTop_toBottomOf="@id/messageTv"/>


            <TextView
                android:id="@+id/yesReachedTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/yes_reached"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/blue_signup"
                android:gravity="center"
                />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/grey_color"
                android:alpha="0.3"
                app:layout_constraintTop_toBottomOf="@id/yesReachedTv"/>

            <TextView
                android:id="@+id/noWantToReportTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/no_want_to_report"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/blue_signup"
                android:gravity="center"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Cancel"
                android:gravity="center"
                android:textColor="@color/blue_signup"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/montserrat_semibold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>