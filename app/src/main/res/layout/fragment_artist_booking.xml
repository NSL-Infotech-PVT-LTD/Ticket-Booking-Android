<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.artistbookingdetail.ArtistBookingFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/toolbarCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                app:cardElevation="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <include layout="@layout/toolbar_layout" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <fragment
                        android:id="@+id/youtubeView"
                        android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/noVideoUploadedTxt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:background="#ababab"
                        android:text="@string/no_video_uploaded"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:fontFamily="@font/montserrat_regular"/>

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:src="@drawable/user_pholder_updated"
                        app:layout_constraintBottom_toBottomOf="@+id/youtubeView"
                        app:layout_constraintEnd_toEndOf="@+id/youtubeView"
                        app:layout_constraintStart_toStartOf="@+id/youtubeView"
                        app:layout_constraintTop_toTopOf="@id/youtubeView" />

                    <ImageView
                        android:id="@+id/youtubePlayIcon"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/youtube_icon"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/youtubeView"
                        app:layout_constraintEnd_toEndOf="@id/youtubeView"
                        app:layout_constraintStart_toStartOf="@id/youtubeView"
                        app:layout_constraintTop_toTopOf="@id/youtubeView" />


                    <HorizontalScrollView
                        android:id="@+id/viewHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:paddingHorizontal="@dimen/_20sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/youtubeView"
                        android:layout_marginTop="@dimen/_20sdp"
                        >
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:textColor="@color/white"
                            app:singleLine="true"
                            app:chipMinTouchTargetSize="0dp"
                            app:chipSpacing="0dp"
                            />

                    </HorizontalScrollView>



                    <ImageView
                        android:id="@+id/profileImg"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_pholder_updated"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewHorizontal" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/profileName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textColor="#32333a"
                        android:textSize="@dimen/_16sdp"
                        app:layout_constraintEnd_toStartOf="@+id/bookBtn"
                        app:layout_constraintStart_toEndOf="@id/profileImg"
                        app:layout_constraintTop_toTopOf="@id/profileImg" />


                    <RatingBar
                        android:id="@+id/ratingbar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:rating="3"
                        android:stepSize="1"
                        android:theme="@style/RatingBar"
                        app:layout_constraintStart_toStartOf="@+id/profileName"
                        app:layout_constraintTop_toBottomOf="@id/profileName" />

                    <TextView
                        android:id="@+id/seeReviewTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/see_review"
                        android:textColor="#139dff"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/ratingbar"
                        app:layout_constraintStart_toEndOf="@id/ratingbar"
                        app:layout_constraintTop_toTopOf="@id/ratingbar" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bookBtn"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="@string/book"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/profileImg"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="@dimen/_1sdp" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/showFieldLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/dotted_view_square"
                        app:layout_constraintTop_toBottomOf="@+id/profileImg">

                        <TextView
                            android:id="@+id/bookingPriceTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/booking_price"
                            android:textColor="#36396e"
                            android:textSize="@dimen/_14sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/dottedLineImg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:background="@drawable/dotted_view_line"
                            app:layout_constraintTop_toBottomOf="@id/bookingPriceTxt" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/user_pholder_updated"
                            app:layout_constraintBottom_toBottomOf="@+id/liveShowTxt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/liveShowTxt" />


                        <TextView
                            android:id="@+id/liveShowTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/live_show"
                            android:textColor="#36396e"
                            android:textSize="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/dottedLineImg" />

                        <!-- live show price card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/liveShowCard"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_100sdp"
                            app:cardBackgroundColor="#fff5f9"
                            app:cardCornerRadius="@dimen/_2sdp"
                            android:minWidth="@dimen/_50sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/dottedLineImg1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/dottedLineImg">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/liveticket"
                                    android:layout_width="18dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ticket"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/perhour"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/per_hour"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_5sdp"
                                    android:gravity="end"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/livePriceText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"

                                    android:singleLine="true"
                                    android:text="@string/price_demo"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_12sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/liveticket"
                                    app:layout_constraintTop_toBottomOf="@+id/perhour" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/dottedLineImg1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/dotted_view_line"
                            app:layout_constraintTop_toBottomOf="@id/liveShowCard" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/user_pholder_updated"
                            app:layout_constraintBottom_toBottomOf="@+id/digitalShowTxt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/digitalShowTxt" />


                        <TextView
                            android:id="@+id/digitalShowTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/digital_show"
                            android:textColor="#36396e"
                            android:textSize="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/dottedLineImg1" />

                        <!-- digital show price card -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/digitalCardShow"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:paddingHorizontal="@dimen/_100sdp"
                            app:cardBackgroundColor="#fff5f9"
                            android:minWidth="@dimen/_50sdp"
                            app:cardCornerRadius="@dimen/_2sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/digitalShowTxt"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/digitalShowTxt">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/digitalTicket"
                                    android:layout_width="18dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ticket"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/perhour1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="@string/per_hour"
                                    android:gravity="end"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_5sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/digitalPriceText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"

                                    android:singleLine="true"
                                    android:text="@string/price_demo"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_12sdp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@id/digitalTicket"
                                    app:layout_constraintTop_toBottomOf="@+id/perhour1" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>  <!--end of show field layout -->

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/galleryTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/gallery"
                        android:textColor="#36396e"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/showFieldLayout" />

                    <ImageView
                        android:id="@+id/dottedLineImg2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:background="@drawable/dotted_view_line"
                        app:layout_constraintTop_toBottomOf="@id/galleryTxt" />

                    <HorizontalScrollView
                        android:id="@+id/horizontalView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dottedLineImg2">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user_pholder_updated"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user_pholder_updated"
                                android:visibility="gone"
                                app:layout_constraintStart_toEndOf="@+id/img1"
                                app:layout_constraintTop_toTopOf="@+id/img1" />

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user_pholder_updated"
                                android:visibility="gone"
                                app:layout_constraintStart_toEndOf="@+id/img2"
                                app:layout_constraintTop_toTopOf="@+id/img1" />

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/user_pholder_updated"
                                android:visibility="gone"
                                app:layout_constraintStart_toEndOf="@+id/img3"
                                app:layout_constraintTop_toTopOf="@+id/img1" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </HorizontalScrollView>


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/socialMediaTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/social_media_handles"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="#36396e"
                        android:fontFamily="@font/montserrat_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

                    <ImageView
                        android:id="@+id/dottedLineImg3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:background="@drawable/dotted_view_line"
                        app:layout_constraintTop_toBottomOf="@id/socialMediaTxt" />

                    <ImageView
                        android:id="@+id/mediaIcon"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:src="@drawable/user_pholder_updated"
                        app:layout_constraintStart_toStartOf="@id/socialMediaTxt"
                        app:layout_constraintTop_toBottomOf="@+id/dottedLineImg3" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mediaTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/media"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#36396e"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toEndOf="@+id/mediaIcon"
                        app:layout_constraintTop_toTopOf="@+id/mediaIcon" />

                    <TextView
                        android:id="@+id/mediaText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:maxLines="2"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#0396ff"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintEnd_toStartOf="@id/youtubeIcon"
                        app:layout_constraintStart_toStartOf="@+id/mediaTxt"
                        app:layout_constraintTop_toBottomOf="@+id/mediaTxt" />

                    <ImageView
                        android:id="@+id/youtubeIcon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/youtube_icon"
                        app:layout_constraintBottom_toBottomOf="@id/mediaIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mediaIcon" />


                    <ImageView
                        android:id="@+id/mediaIconInsta"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:src="@drawable/user_pholder_updated"
                        app:layout_constraintStart_toStartOf="@id/socialMediaTxt"
                        app:layout_constraintTop_toBottomOf="@+id/mediaText" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/mediaTxtInsta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:text="@string/media"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintStart_toEndOf="@+id/mediaIconInsta"
                        app:layout_constraintTop_toTopOf="@+id/mediaIconInsta" />

                    <TextView
                        android:id="@+id/mediaTextInsta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:maxLines="2"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#0396ff"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintEnd_toStartOf="@+id/instaIcon"
                        app:layout_constraintStart_toStartOf="@+id/mediaTxtInsta"
                        app:layout_constraintTop_toBottomOf="@+id/mediaTxtInsta" />

                    <ImageView
                        android:id="@+id/instaIcon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/insta_icon"
                        app:layout_constraintBottom_toBottomOf="@id/mediaIconInsta"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mediaIconInsta" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/aboutTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/about"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="#36396e"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mediaTextInsta" />

                    <ImageView
                        android:id="@+id/dottedLineImg4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:background="@drawable/dotted_view_line"
                        app:layout_constraintTop_toBottomOf="@+id/aboutTxt" />

                    <TextView
                        android:id="@+id/aboutText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:textColor="#36396e"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@id/dottedLineImg4" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/chatAboutBookingTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Have a chat about your booking"
                        app:layout_constraintStart_toStartOf="@+id/aboutText"
                        app:layout_constraintTop_toBottomOf="@+id/aboutText"
                        app:layout_constraintEnd_toStartOf="@+id/chatStartIcon"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:singleLine="true"
                        android:textColor="#36396e"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_30sdp"/>


                    <ImageView
                        android:id="@+id/chatStartIcon"
